<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cs110301assignmentu8.ResultController">
    <!-- Pane để vẽ nền động -->
    <Pane fx:id="backgroundPane" pickOnBounds="false"/>
    <!-- VBox giao diện chính, đặt phía trên -->
    <VBox fx:id="mainContainer" alignment="CENTER" spacing="20"
          style="-fx-background-color: linear-gradient(to bottom, #87CEEB, #4682B4);"
          VBox.vgrow="ALWAYS" fillWidth="true">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <!-- ...existing VBox content... -->
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10;"
              VBox.vgrow="NEVER" fillWidth="true">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="cityLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E4053;"/>
            <ImageView fx:id="weatherIconView"
                       fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true"
                       style="-fx-effect: dropshadow(gaussian, #888888, 8, 0.5, 2, 2); -fx-background-color: #f0f0f0;"/>
            <Label fx:id="temperatureLabel" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #E74C3C;"/>
            <Label fx:id="weatherLabel" style="-fx-font-size: 18px; -fx-text-fill: #34495E;"/>
        </VBox>
        <GridPane hgap="20" vgap="10" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="feelsLikeLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                   style="-fx-font-size: 14px; -fx-text-fill: #2E4053;"/>
            <Label fx:id="humidityLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   style="-fx-font-size: 14px; -fx-text-fill: #2E4053;"/>
            <Label fx:id="pressureLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                   style="-fx-font-size: 14px; -fx-text-fill: #2E4053;"/>
            <Label fx:id="windLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                   style="-fx-font-size: 14px; -fx-text-fill: #2E4053;"/>
        </GridPane>
        <ListView fx:id="forecastListView"
                  style="-fx-background-radius: 10; -fx-background-color: rgba(255,255,255,0.9);"
                  VBox.vgrow="ALWAYS"/>
        <HBox spacing="10" alignment="CENTER"
              VBox.vgrow="NEVER">
            <Button fx:id="unitToggleButton" text="Switch to °F" onAction="#handleUnitToggle" 
                    style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"/>
            <Button fx:id="historyButton" text="History" onAction="#handleShowHistory" 
                    style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"/>
            <Button fx:id="backButton" text="Back" onAction="#handleBack" 
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>
</StackPane>